@model SUREBusiness.Models.NoteModel

@{
    ViewData["Title"] = "Nieuwe notitie aanmaken";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <form asp-controller="Note" asp-action="Add" method="post" class="col-md-12">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <h3>Nieuwe notitie aanmaken</h3>
        </div>
        <div>
            <div class="row" style="margin-top:50px;">
                <div class="form-group">
                    <label>Voer jouw naam in</label>
                    <input class="form-control" asp-for="CustomerName" />
                    <span asp-validation-for="CustomerName"></span>
                </div>
            </div>
            <div class="row" style="margin-top:50px;">
                <div class="form-group">
                    <label>Mobiel nummmer</label>
                    <input class="form-control" asp-for="MobileNumber" />
                    <span asp-validation-for="MobileNumber"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ManagerName" class="control-label">Manager</label> <br />
                <select asp-for="ManagerName" asp-items="ViewBag.ManagerNames"></select>
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Hoe snel moeten wij jou terug bellen?</label> <br />
                <select asp-for="CategoryName" asp-items="ViewBag.CategoriesName"></select>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="row" style="margin-top:50px;">
                <div class="form-group">
                    <label>Opmerkingen</label>
                    <input class="form-control" asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
        </div>
        <div style="margin-top:40px;" class="form-group">
            <input type="submit" value="Opslaan" class="btn btn-login" />
        </div>
        <p>
            <a href="GetAllNotes">Terug</a>
        </p>
    </form>
</div>